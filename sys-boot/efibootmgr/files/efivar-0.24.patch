+			} else {
+				sz = efidp_size(dp);
+				if (sz < 0)
+					err(1, "efidp_size()");
+			}
+
+			ssz = efidp_format_device_path(NULL, 0, dp, sz);
+			if (ssz < 0)
+				err(1, "efidp_format_device_path()");
+
+			s = alloca(ssz + 1);
+			ssz = efidp_format_device_path(s, ssz, dp, sz);
+			if (ssz < 0)
+				err(1, "efidp_format_device_path()");
+			s[ssz] = '\0';
+			printf("\t%s\n", s);
+
+			if (!efidp_is_multiinstance(dp))
+				break;
+
+			rc = efidp_get_next_end(dp, &dp);
+			if (rc < 0)
+				break;
+
+			rc = efidp_next_instance(dp, &dp);
+			if (rc < 0)
+				break;
+		}
+	}
+	return 0;
